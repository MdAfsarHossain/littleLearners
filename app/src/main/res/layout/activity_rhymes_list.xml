<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RhymesList">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFEFE"
        android:elevation="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_back" />

        <TextView
            android:text="Rhymes List"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!--  Rhymes List  -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/rhymesOne"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Twinkle Twinkle Little Star"
                android:background="@color/white"
                android:textSize="15sp"
                android:height="40dp"/>

            <Button
                android:id="@+id/rhymesTwo"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Johny Johny Yes Papa"
                android:background="@color/white"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/rhymesThree"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Rain, Rain, Go Away"
                android:background="@color/white"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/rhymesFour"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Ding Dong Bell"
                android:background="@color/white"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/rhymesFive"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Baa Baa Black Sheep"
                android:background="@color/white"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/rhymesSix"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="I Love My Country"
                android:background="@color/white"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/rhymesSeven"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Brush Brush Brush Your Teeth"
                android:background="@color/white"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/rhymesEight"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="One Two Buckle My Shoe"
                android:background="@color/white"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/rhymesNine"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Pussy Cat Pussy Cat"
                android:background="@color/white"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/rhymesTen"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Humpty Dumpty"
                android:background="@color/white"
                android:textSize="15sp"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>